.include "${.CURDIR}/../../Makefile.inc0"

RELTOP:= ../${RELTOP}
.PATH: ${SRCDIR}/gas ${SRCDIR}/gas/config ${.CURDIR}/..

TARGET_OS?=	dragonfly

PROG=	as
MAN=	as221.1
MLINKS+=as221.1 as.1
SRCS+=	app.c			\
	as.c			\
	atof-generic.c		\
	compress-debug.c	\
	cond.c			\
	depend.c		\
	dwarf2dbg.c		\
	dw2gencfi.c		\
	ecoff.c			\
	ehopt.c			\
	expr.c			\
	flonum-copy.c		\
	flonum-konst.c		\
	flonum-mult.c		\
	frags.c			\
	hash.c			\
	input-file.c		\
	input-scrub.c		\
